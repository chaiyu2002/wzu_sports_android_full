<?xml version="1.0" encoding="utf-8"?>
<com.tim.app.ui.view.HomepageHeadView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="285dp" >
        <RelativeLayout
            android:id="@+id/rlHeadView"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurTermTargetCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/curTermTargetCount"
                    android:textColor="#868892"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvAccumulCostEnergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/accumulCostEnergy"
                    android:textColor="#868892"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余"
                        android:textColor="#868892"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvSurplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次"
                        android:textColor="#868892"
                        android:textSize="16dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlRank"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/def_line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_charts"
                    android:drawablePadding="10dp"
                    android:text="校园排行榜"
                    android:textColor="#868892"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llBadNetworkFresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="网络不好，请点击刷新"
                android:textSize="14dp">
            </TextView>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/view_background_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53.5dp"
        android:gravity="center"
        android:text="运动方式"
        android:textColor="@color/black"
        android:textSize="15dp" />


</com.tim.app.ui.view.HomepageHeadView>