<?xml version="1.0" encoding="utf-8"?>
<com.tim.app.ui.view.HomepageHeadView xmlns:android="http://schemas.android.com/apk/res/android"
                                      android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff">

        <LinearLayout
            android:id="@+id/llHeadView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="22dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCurSignInCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="0"
                        android:textColor="#ff66a5fc"
                        android:textSize="32sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="/"
                        android:textColor="#ff66a5fc"
                        android:textSize="18sp"/>


                    <TextView
                        android:id="@+id/tvCurTermTargetTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="0"
                        android:textColor="#cc66a5fc"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="次"
                        android:textColor="#cc66a5fc"
                        android:textSize="16sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp"
                        android:text="用脚步丈量世界"
                        android:textColor="#ffcccccc"
                        android:textSize="12sp"
                        />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/pbReachTargetTimes"
                    style="@style/StyleProgressBarMini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="5dp"
                    android:minHeight="5dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/layer_pd"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="有效打卡次数/目标打卡次数"
                    android:textColor="#ffcccccc"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="11dp"
                android:background="#F5F6FA"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:gravity="center_vertical"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/ic_sport_count"
                        android:text="@string/curTermSportsCount"
                        android:textColor="#ff3a3d50"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tvCurTermAccuTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="53dp"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="26sp"/>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="18dp"
                    android:gravity="center"
                    android:background="@color/colorLine"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:gravity="center_vertical"
                        android:drawablePadding="6dp"
                        android:drawableStart="@drawable/ic_cost_time"
                        android:text="@string/consumeMinute"
                        android:textColor="#ff3a3d50"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvAccumulCostTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:text="0"
                        android:textColor="#333333"
                        android:textSize="26sp"/>
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rlRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#F5F6FA"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_rank"
                    android:text="校园排行榜"
                    android:textColor="#ff333333"
                    android:textSize="13sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_rank_right_arrow"/>
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBadNetworkFresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="网络不好，请点击刷新"
                android:textSize="14dp"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="运动方式"
            android:textColor="#ff666666"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

</com.tim.app.ui.view.HomepageHeadView>