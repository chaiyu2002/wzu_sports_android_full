<?xml version="1.0" encoding="utf-8"?>
<com.tim.app.ui.view.HomepageHeadView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="285dp" >
        <RelativeLayout
            android:id="@+id/rlHeadView"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurTermAccuCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/curTermAccuCountLabel"
                    android:textColor="#868892"
                    android:textSize="16dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow"/>

                <!--<TextView-->
                    <!--android:id="@+id/tvAccumulCostEnergy"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:text="@string/accumulCostEnergy"-->
                    <!--android:textColor="#868892"-->
                    <!--android:textSize="16dp" />-->

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlTop"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#868892"
                        android:textSize="30dp" />

                    <!--<TextView-->
                        <!--android:id="@+id/tvSurplus"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:textSize="20dp" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="次"-->
                        <!--android:textColor="#868892"-->
                        <!--android:textSize="16dp" />-->
                </LinearLayout>

                />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlThird"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/rlSecond">
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlThird"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rlFourthLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_below="@+id/rlThird">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="消耗（卡）"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1200"
                            android:textSize="@dimen/text_size_18"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="达标（次）"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35/45"
                            android:textSize="@dimen/text_size_18"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rlFourthRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:layout_toRightOf="@+id/rlFourthLeft">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="耗时（分钟）"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="120"
                            android:textSize="@dimen/text_size_18"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="课外成绩（分）"
                            android:textSize="@dimen/text_size_14"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/20"
                            android:textSize="@dimen/text_size_18"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlRank"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/def_line_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_charts"
                    android:drawablePadding="10dp"
                    android:text="校园排行榜"
                    android:textColor="#868892"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llBadNetworkFresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="网络不好，请点击刷新"
                android:textSize="14dp">
            </TextView>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/view_background_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53.5dp"
        android:gravity="center"
        android:text="运动方式"
        android:textColor="@color/black"
        android:textSize="15dp" />


</com.tim.app.ui.view.HomepageHeadView>