<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/rlHeader"
        style="@style/TitleBarStyle"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <com.application.library.widget.roundimg.RoundedImageView
            android:id="@+id/iv_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_def_avatar"
            app:oval="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_home_logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/def_line_color" />
    </RelativeLayout>

    <com.application.library.widget.refresh.PtrClassicFrameLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlHeader">

        <com.application.library.widget.loadmore.LoadMoreRecycleViewContainer
            android:id="@+id/load_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.application.library.widget.recycle.WrapRecyclerView
                android:id="@+id/rv_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.application.library.widget.loadmore.LoadMoreRecycleViewContainer>

    </com.application.library.widget.refresh.PtrClassicFrameLayout>

</RelativeLayout>