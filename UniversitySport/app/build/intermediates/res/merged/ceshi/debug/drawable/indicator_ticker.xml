<?xml version="1.0" encoding="utf-8"?>
<selector 
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="7dp" android:height="7dp"/>
                    <solid android:color="#e4b86e" />
                </shape>
             </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="1.5dp" android:right="1.5dp" android:top="1.5dp" android:bottom="1.5dp">
                <shape android:shape="oval" >
                    <size android:width="4dp" android:height="4dp"/>
                    <solid android:color="#c4994f" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>